/* pages/Mine/mine.wxss */
.box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.user{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.userimg{
  padding:20rpx;
  width: 160rpx;
  height: 160rpx;
}
.userimg image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.userinfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20rpx;
  font-size: 28rpx;
  line-height:50rpx;
  color:grey;
}
.divLineX{
  background-color: #F5F5F5;
  width: 100%;
  height: 15rpx;
}
.divLineXs{
  background-color: #F5F5F5;
  width: 100%;
  height: 5rpx;
}
.bar{
  line-height: 80rpx;
  width: 100%;
  height: 80rpx; 
  padding:15rpx; 
}

.icon{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 10rpx;
}